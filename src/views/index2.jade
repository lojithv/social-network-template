extends layout

block content
	- var menu = 'index'
	include includes/header
	.page-header.bg.home-img.dark-theme
		.container.text-center
			//div.img-overlay
			div.col-sm-10.col-sm-offset-1
				h1.thin= appTitle
				p.description A Node.js template for building social apps
	div(class="section" ng-controller="mainCtrl")
		.container
			div(class="row" ng-repeat="post in posts")
				.col-sm-6.col-sm-offset-3
					.post
						.post-primary-content
							.post-avatar.dark-theme
								img(ng-src="{{post.author.avatar}}")
							h5 {{post.author.username}}
							p.post-text {{post.text}}
						
						div(class="post-photo" ng-if="post.media === 'photo'")
							img(src="img/photo.jpg")
						div(class="post-photo" ng-if="post.media === 'video'")
							img(src="img/video.jpg")
						//if post.media === "video"
							//.post-photo
								//img(src="img/video.jpg")
						.post-footer
							span.fa.fa-reply
							span.fa.fa-heart-o
							span.fa.fa-ellipsis-h
						.post-replies
							.container-fluid
								input(type="text" placeholder="Reply...")
